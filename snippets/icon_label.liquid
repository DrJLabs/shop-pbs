{%- assign item_downcase = value | downcase -%}
{%- assign icon_item_image = blank -%}
{%- for icon_item in icons_config -%}
  {%- assign icon_item_parts = icon_item | split: ':' -%}
  {%- assign icon_item_label = icon_item_parts.first | strip -%}
  {%- assign icon_item_name = icon_item_label | downcase -%}
  {%- if item_downcase == icon_item_name -%}
    {%- assign icon_item_value = icon_item_parts.last | strip -%}

    {%- if images[icon_item_value] != blank -%}
      {%- assign icon_item_image = images[icon_item_value] -%}
    {%- endif -%}

    {%- break -%}
  {%- endif -%}
{%- endfor -%}
{%- if icon_item_image != blank -%}
  <img
    src="{{ icon_item_image | image_url: width: 80, height: 80 }}"
    width="80"
    height="80"
    loading="lazy"
    alt="{{ icon_item_label | escape }}"
  >
{%- endif -%}
