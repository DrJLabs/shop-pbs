<style>
  [data-section-id="{{ section.id }}"] {
    --heading-align: {{ section.settings.heading_alignment | default: 'center' }};
    --font-headline-scale-desk: {{ section.settings.size_heading | default: 100 | divided_by: 100.0 }};
    --font-headline-scale: {{ section.settings.size_heading_mobile | default: 100 | divided_by: 100.0 }};
  }

  [data-section-id="{{ section.id }}"] .blend-page__title {
    text-align: var(--heading-align);
    font-size: calc(var(--font-headline-size) * var(--font-headline-scale, 1));
  }

  @media screen and (min-width: 750px) {
    [data-section-id="{{ section.id }}"] .blend-page__title {
      font-size: min(
        calc(var(--font-headline-size) * var(--font-headline-scale-desk, 1)),
        calc(var(--font-headline-size) + 2.5vw)
      );
    }
  }
</style>

<div class="blend-page" data-section-id="{{ section.id }}">
  <div class="wt-section__wrapper blend-page__inner">
    {%- liquid
      assign heading = section.settings.heading | strip
      if heading == ''
        assign heading = page.title
      endif
    -%}
    <h1 class="blend-page__title">
      {{ heading | strip | escape }}
    </h1>
    {% if section.settings.image %}
      <div class="blend-page__image">
        {{
          section.settings.image
          | image_url: width: 2000
          | image_tag:
            loading: 'lazy',
            alt: section.settings.image_alt | default: page.title,
            widths: '375, 550, 750, 1100, 1500, 1780, 2000',
            sizes: '100vw'
        }}
      </div>
    {% endif %}
    {% if section.settings.text != blank %}
      <div class="blend-page__text rte">
        {{ section.settings.text }}
      </div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .blend-page__inner {
    display: flex;
    flex-direction: column;
    gap: calc(var(--gap, 8px) * 3);
  }

  .blend-page__image img {
    display: block;
    width: 100%;
    height: auto;
  }

  .blend-page__text p + p {
    margin-top: 1em;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.blend_page.name",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.blend_page.settings.heading"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "t:sections.featured-collection.settings.text_alignment.label",
      "options": [
        {
          "value": "left",
          "label": "t:sections.featured-collection.settings.text_alignment.left.label"
        },
        {
          "value": "center",
          "label": "t:sections.featured-collection.settings.text_alignment.center.label"
        },
        {
          "value": "right",
          "label": "t:sections.featured-collection.settings.text_alignment.right.label"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "size_heading",
      "min": 50,
      "max": 500,
      "step": 10,
      "default": 100,
      "label": "t:sections.settings.settings.size-heading.label",
      "unit": "%"
    },
    {
      "type": "range",
      "id": "size_heading_mobile",
      "min": 80,
      "max": 300,
      "step": 10,
      "default": 100,
      "label": "t:sections.settings.settings.size-heading-mobile.label",
      "unit": "%"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.blend_page.settings.image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "t:sections.blend_page.settings.image_alt"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "t:sections.blend_page.settings.text"
    }
  ],
  "presets": [
    {
      "name": "t:sections.blend_page.name"
    }
  ]
}
{% endschema %}
