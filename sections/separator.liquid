<style>
  [data-section-id="{{ section.id }}"]
  {
      {% if section.settings.margin-top %}
          --section-gap-top: {{ section.settings.margin-top }}px;
      {% endif %}

      {% if section.settings.margin-bottom %}
          --section-gap-bottom: {{ section.settings.margin-bottom }}px;
      {% endif %}

      --heading-align: {{ section.settings.heading_alignment | default: 'center' }};
      --font-headline-scale-desk: {{ section.settings.size_heading | divided_by: 100.0 }};
      --font-headline-scale: {{ section.settings.size_heading_mobile | divided_by: 100.0 }};

  }
</style>

{% if section.settings['full-width-line'] %}
  {% assign customwrapperclass = 'hero__wrapper--full' %}
{% else %}
  {% assign customwrapperclass = 'hero__wrapper' %}
{% endif %}

<div data-section-id="{{ section.id }}" class="wt-separator {{ customwrapperclass }}">
  {% if section.settings['show-separator-line'] %}
    <hr
      class="wt-separator__line"
      style="background-color: {{ section.settings.color-background }};"
    >
  {% endif %}

  {% render 'headline', title: section.settings.heading %}
</div>

{% schema %}
{
  "name": "t:sections.separator.name",
  "tag": "section",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "t:sections.settings.settings.heading.label",
      "default": "Separator"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "t:sections.featured-collection.settings.text_alignment.label",
      "options": [
        {
          "value": "left",
          "label": "t:sections.featured-collection.settings.text_alignment.left.label"
        },
        {
          "value": "center",
          "label": "t:sections.featured-collection.settings.text_alignment.center.label"
        },
        {
          "value": "right",
          "label": "t:sections.featured-collection.settings.text_alignment.right.label"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "size_heading",
      "min": 50,
      "max": 500,
      "step": 10,
      "default": 100,
      "label": "t:sections.settings.settings.size-heading.label",
      "unit": "%"
    },
    {
      "type": "range",
      "id": "size_heading_mobile",
      "min": 80,
      "max": 300,
      "step": 10,
      "default": 100,
      "label": "t:sections.settings.settings.size-heading-mobile.label",
      "unit": "%"
    },
    {
      "type": "checkbox",
      "id": "show-separator-line",
      "label": "t:sections.separator.settings.show-separator-line.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "full-width-line",
      "label": "t:sections.separator.settings.full_width_line.label",
      "default": false
    },
    {
      "type": "header",
      "content": "t:sections.global.colors"
    },
    {
      "type": "color",
      "id": "color-background",
      "default": "#000000",
      "label": "t:sections.separator.settings.color-background.label"
    },
    {
      "type": "header",
      "content": "t:sections.global.section_spacing"
    },
    {
      "type": "range",
      "id": "margin-top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 20,
      "unit": "px",
      "label": "t:sections.settings.settings.distance-top.label"
    },
    {
      "type": "range",
      "id": "margin-bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 20,
      "unit": "px",
      "label": "t:sections.settings.settings.distance-bottom.label",
      "info": "t:sections.settings.settings.distance-bottom.info"
    }
  ],
  "presets": [
    {
      "name": "t:sections.separator.presets.name"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
